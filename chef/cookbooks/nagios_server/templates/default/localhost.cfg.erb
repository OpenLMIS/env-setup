define host{
  use                     linux-server
  host_name               localhost
  alias                   localhost
  address              <%=node.ipaddress%>
}

define hostgroup{
  hostgroup_name          linux-servers
  alias                   Linux Servers
  members                 localhost
}

define service{
  use                     generic-service
  host_name               localhost
  service_description     PING
  check_command		        check_ping!100.0,20%!500.0,60%
}

define service{
  use                     generic-service
  host_name               localhost
  service_description     SSH
  check_command		        check_ssh
  notifications_enabled	  0
}

define service{
  use                     generic-service
  host_name               localhost
  service_description     HTTP
  check_command		        check_http
  notifications_enabled	  0
}
